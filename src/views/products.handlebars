<div>
    <h1>Lista de productos:</h1>
    <div id="productList" class="productContainer">
        {{#each payload}}
        <div class="cardProduct" id="{{_id}}">
            <div class="content">
                <div class="title">{{title}}</div>
                <div class="price">${{price}}</div>
                <div class="description">{{description}}</div>
            </div>
            <button class="{{displayAdmin}}" type="button" onclick="addToCart('{{_id}}')">Agregar al carrito</button>
            <button class="{{displayUser}}" type="button"
                onclick="updateProductId('{{_id}}','{{code}}','{{title}}','{{description}}','{{price}}','{{thumbnail}}','{{stock}}','{{category}}')">
                Actualizar producto
            </button>
            <button class="{{displayUser}}" type="button" onclick="deleteProduct('{{_id}}')">Eliminar producto</button>
        </div>
        {{/each}}
    </div>
    {{#if hasPrevPage}}
    <a href={{prevLink}}>Anterior</a>
    {{/if}}
    <label id="page">{{page}}</label>
    {{#if hasNextPage}}
    <a href={{nextLink}}>Siguiente</a>
    {{/if}}
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.2/dist/sweetalert2.all.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>